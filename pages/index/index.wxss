.imgs {
  width: 100%;
  height: 100%;
}

/* 轮播图下方导航栏 */
.navbar {
  width: 100%;
  height: 130rpx;
  background-color: #272a3b;
}
.navbarBox {
  display: flex;
  width: 95%;
  height: 130rpx;
  margin: 0 auto;
  justify-content: space-around;
  text-align: center;
}
.nacbarItem {
  width: 100rpx;
}
.nacbarItem image {
  width: 90rpx;
  height: 90rpx;
  background-color: #272a3b;
}
.nacbarItem view {
  font-size: 20rpx;
  color: #ccc;
}
/* 功能区 */
.container {
  background-color:#eee;
  margin-top: 15rpx;
  height: 700rpx;
  position: relative;
}
.containerBox {
  display: flex;
  flex-wrap: wrap;
  text-align: center;
  justify-content: space-evenly;
  align-items: flex-start;
  position: absolute;
  top: 0;
  left: 0;
}
.containerItem {
  width: 187.5rpx;
  height: 200rpx;
  line-height: 50rpx;
  background-color: white;
  margin-top: 2rpx;
}
.containerItem image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
}
.containerItem view {
  font-size: 26rpx;
  line-height: 30rpx;
}

.tabImg {
  position: absolute;
}
.tabImg image {
  width: 80rpx;
  height: 80rpx;
}


/* 弹窗 */
.dialog {
  position: absolute;
  top: 490rpx;
  width: 95%;
  left: 50%;
  transform: translate(-50%);
  height: 530rpx;
  background-color: #eee;
  text-align: center;
}
.dialogText {
  background-color: #272a3b;
  line-height: 90rpx;
  color: #78bd00;
}
.dialogContainer {
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
.dialogContainerItem {
  width: 150rpx;
  height: 120rpx;
  border-radius: 20px;
  margin: 10rpx;
}
.dialogContainerItem image {
  width: 90rpx;
  height: 90rpx;
}

.x {
  color: #272a3b;
  position: absolute;
  top: -30rpx;
  right: 6rpx;
}